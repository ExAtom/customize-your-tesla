<helpers:PageBase xmlns:helpers="clr-namespace:TeslaCarConfigurator.Helpers" x:Class="TeslaCarConfigurator.LandingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TeslaCarConfigurator"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LandingPage">

    
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock TextWrapping="Wrap" Text="Üdvözlünk a Tesla Autó Konfigurátorunkban!" Margin="0,5" TextAlignment="Center" HorizontalAlignment="Center" FontFamily="Segoe UI Black" FontSize="30"/>
                <Rectangle RadiusX="20" Width="370" RadiusY="20" Stroke="Black" StrokeThickness="2" Height="200" Margin="0,20,0,10">
                    <Rectangle.Fill>
                        <ImageBrush ImageSource="Assets/Tesla2.jpg"/>
                    </Rectangle.Fill>
                </Rectangle>
                <TextBlock TextWrapping="Wrap" Margin="0,5" TextAlignment="Justify" HorizontalAlignment="Center" FontSize="15"><Run Text="Ennek a programnak a segítségével mindenki saját igénye szerint tudja személyre szabni kedvenc Tesla autóját."/><LineBreak/><Run Text="A rendszer használata egyszerű, (8) ablakon keresztül végigvezet bennünket minden apró részleten, hogy"/><LineBreak/><Run Text="a jármű még inkább passzoljon mindenki "/><Run Text="elképzeléséhez"/><Run Text="."/></TextBlock>
                <Grid Margin="0,30,0,15">
                    <Button Content="Kilépés" Margin="30,0" Width="125" Height="30" FontSize="15" HorizontalAlignment="Left" Click="btnClose_Click"/>
                    <Button Content="Vágjunk bele!" Margin="30,0" Width="125" Height="30" FontSize="15" HorizontalAlignment="Right" Click="btnStart_Click"/>
                </Grid>
                <TextBlock HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap"><Run Text="A konfigurátort készítette: Csepi Szilveszter, Kékesi Ádám és Menyhárt Attila a JÁGISZ 11./A osztályos tanulói 2020.12-ban"/><LineBreak/><Run Text="Minden jog fenntartva!"/></TextBlock>
            </StackPanel>
        </ScrollViewer>
    
</helpers:PageBase>
