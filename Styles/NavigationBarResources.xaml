<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:TeslaCarConfigurator">

    <Style x:Key="NavigationBarStyle" TargetType="Button">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="10" Padding="1">
                        <Border.Background>
                            <SolidColorBrush Color="#00909E"></SolidColorBrush>
                        </Border.Background>
                        <Border.Effect>
                            <DropShadowEffect Color="#FF989898"></DropShadowEffect>
                        </Border.Effect>
                        <WrapPanel VerticalAlignment="Center">
                            <Image Source="/Assets/Feature Icons/homepage.png" Margin="10,0,0,0" Height="30" VerticalAlignment="Center" HorizontalAlignment="Center"></Image>
                            <ContentPresenter Content="{TemplateBinding Content}" Margin="10,0" VerticalAlignment="Center" ></ContentPresenter>
                        </WrapPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

    </Style>
    
</ResourceDictionary>