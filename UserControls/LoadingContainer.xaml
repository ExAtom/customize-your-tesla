<UserControl x:Class="TeslaCarConfigurator.UserControls.LoadingContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TeslaCarConfigurator.UserControls"
             
             xmlns:gif="http://wpfanimatedgif.codeplex.com"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Image Name="loadingImage" gif:ImageBehavior.AnimatedSource="../Assets/loading.gif"></Image>
        <StackPanel Name="contentContainer" Visibility="Collapsed"></StackPanel>
    </Grid>
</UserControl>
