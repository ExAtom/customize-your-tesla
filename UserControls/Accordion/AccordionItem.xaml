<UserControl x:Class="TeslaCarConfigurator.UserControls.Accordion.AccordionItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TeslaCarConfigurator.UserControls.Accordion"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Style="{DynamicResource AccordionContainerStyle}">
    <StackPanel>
        <Button Name="headerContainer" Style="{DynamicResource AccordionClosedHeaderStyle}" Click="OnHeaderClick"></Button>
        <StackPanel Visibility="Collapsed" Name="separator" Height="1" Background="#FF142850"></StackPanel>
        <Button Visibility="Collapsed" Name="contentContainer" Style="{DynamicResource AccordionContentStyle}"></Button>
    </StackPanel>
</UserControl>
