<Window x:Class="TeslaCarConfigurator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TeslaCarConfigurator"
        mc:Ignorable="d"
        Title="Tesla Autó Konfigurátor" Width="800" Height="600" MinWidth="545" MaxWidth="1000" MaxHeight="600" Background="#FFC6CBD0" x:Name="Windows" SizeChanged="Windows_SizeChanged">
    <DockPanel LastChildFill="True">
        <ScrollViewer DockPanel.Dock="Bottom" VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Auto" Margin="20,20,20,10" Visibility="Visible">
            <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Height="40" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10">
                <Button Width="80" Margin="20,0" >Kezdőlap</Button>
                <Button Width="80" Margin="20,0" >Model</Button>
                <Button Width="80" Margin="20,0" >Akkumulátor</Button>
                <Button Width="80" Margin="20,0" >Váltó</Button>
                <Button Width="80" Margin="20,0" >Festés</Button>
                <Button Width="80" Margin="20,0" >Kerekek</Button>
                <Button Width="80" Margin="20,0" >Külső</Button>
                <Button Width="80" Margin="20,0" >Belső</Button>
                <Button Width="80" Margin="20,0" >Szoftver</Button>
                <Button Width="120" Margin="20,0" >Megrendelő adatai</Button>

            </StackPanel>
        </ScrollViewer>
        <Frame x:Name="Container" NavigationUIVisibility="Hidden" DockPanel.Dock="Top"  MaxWidth="1000" MaxHeight="500"></Frame>
    </DockPanel>
</Window>
